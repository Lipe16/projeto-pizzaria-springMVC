			<artifactId>jackson-databind</artifactId>
			<version>2.3.1</version>
		</dependency>
		
	</dependencies>
	
	
	<build>
		<plugins>
		
			<!-- cuida do arquivo war-->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
